<%- include("partials/header") %>
<h1>Home</h1>
<p><%= _homeStartingContent %></p>

<% postLists.forEach(function(post){ %>

    <h1> <%= post.title %> </h1>
    <p>
        <%= post.content.substr(0, 100) + "..." %>
        
        <% if(post.content.length > 100){ %>   
            <a href="/posts/<%=post.title %>">Read more</a>
        <% } %>
    </p>
    
<% }) %>

<%- include("partials/footer") %>